<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: update_post_path(@post.id), method: :patch do |f| %>
<h4>タイトル</h4>
<!--<%= f.text_field :title %>-->
<%= f.text_field :title, autofocus: true, id: "inputTitle", placeholder: "タイトル" %>

<h4>本文</h4>
<!--<%= f.text_area :body %>-->
<%= f.text_field :body, autofocus: true, id: "inputBody", placeholder: "本文" %>

<%= f.submit '保存' %>

<% end %>